
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/productos/edit/{{producto.idProductos}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{producto.Nombre}}" name="Nombre" class="form-control" placeholder="NOMBRE" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{producto.Precio}}" name="Precio" class="form-control" placeholder="PRECIO">
                        </div>
                        <div class="form-group">
                            <textarea name="Descripcion" rows="2" class="form-control" placeholder="DESCRIPCION">{{producto.Descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>